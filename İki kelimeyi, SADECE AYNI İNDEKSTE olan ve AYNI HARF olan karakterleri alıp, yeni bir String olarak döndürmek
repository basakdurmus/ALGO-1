//İki kelimeyi, SADECE AYNI İNDEKSTE olan ve AYNI HARF olan karakterleri alıp, yeni bir String olarak döndürmek

import java.util.Scanner;


public class Main {
    public static String birlestir(String kelimeBir,String kelimeİki){
        String sonuc="";

        for(int i=0;i<kelimeBir.length();i++){
            char ch=kelimeBir.charAt(i);
            for(int j=0;j<kelimeİki.length();j++){
                char ck=kelimeİki.charAt(j);
               if (i == j && kelimeBir.charAt(i) == kelimeİki.charAt(j)) {
                sonuc += kelimeBir.charAt(i);
                
            }
        }}
       
        return sonuc;
        
    }
    public static void main(String[] args) {
        Scanner scanner=new Scanner(System.in);
        System.out.println("birinci kelimeyi giriniz");
        String kelimeBir=scanner.nextLine();
        System.out.println("ikinci kelimeyi giriniz");
        String kelimeİki=scanner.nextLine();
        System.out.println("birlesmis hali");
        String yeni=birlestir(kelimeBir,kelimeİki);
        System.out.println(yeni);
        
        
    }}
    
