
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        int toplam = 0;

        while (true) {
            System.out.print("SayÄ± giriniz (0 bitirir): ");
            int sayi = scanner.nextInt();

            if (sayi == 0) {
                break; 
            }

            toplam += sayi;
        }

        for (int i = 0; i < 10; i++) {
            System.out.println("Toplam = " + toplam);
        }
    }
}
